{
    "extends": "airbnb-base",
    "env": {
       "es6": true,
       "browser": true,
       "jest": true
    },
    "rules": {
      "no-restricted-syntax": [
        "error",
        "LabeledStatement",
        "WithStatement"
      ],
      "max-len": "off",
      "no-alert": "off",
      "no-shadow": "off",
      "class-methods-use-this": ["error", { "exceptMethods": ["playAttack", "playMove", "createCharacter", "characterInformation"] }]
    }
  }